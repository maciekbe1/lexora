# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (for data seeding if needed)
# Get this from: Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Unsplash API (for deck covers)
EXPO_PUBLIC_UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# App Configuration
EXPO_PUBLIC_APP_NAME=lexora
EXPO_PUBLIC_APP_VERSION=1.0.0

# Development
EXPO_PUBLIC_DEV_MODE=true

# Database
EXPO_PUBLIC_DB_NAME=lexora.db

# Features Flags
EXPO_PUBLIC_ENABLE_SYNC=false
EXPO_PUBLIC_ENABLE_AI_DECK_BUILDER=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false